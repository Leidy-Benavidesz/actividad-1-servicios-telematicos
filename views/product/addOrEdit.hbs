<h3>{{viewTitle}}</h3>

<form action="/product" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{product._id}}">
    <div class="form-group">
        <label>Nombre Producto</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{product.fullName}}">
        <div class="text-danger">
            {{product.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{product.email}}">
        <div class="text-danger">
            {{product.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Celular</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{product.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>Ciudad</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{product.city}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Vendedor</label>
            <input type="text" class="form-control" name="vendedor" placeholder="Vendedor" value="{{product.vendedor}}">
        </div>
        <div class="form-group col-md-6">
            <label>Valor Factura</label>
            <input type="text" class="form-control" name="valor_factura" placeholder="Valor Factura"
                value="{{product.valor_factura}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Registrar</button>
        <a class="btn btn-secondary" href="/product/list"><i class="fa fa-list-alt"></i> Ver productos</a>
    </div>
</form>